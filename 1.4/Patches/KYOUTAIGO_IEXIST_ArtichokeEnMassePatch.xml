<!-- This code was provided by the user 'I Exist', and then butchered and simplified on Dub's Discord chat room by Kyoutaigo -->

<Patch>
  <Operation Class="PatchOperationConditional">
    <!-- Does this exist? -->
    <xpath>Defs/ThingDef[defName="GAB_RawJeru"]</xpath>
    <!-- If it does, LET'S FASTING GOOOOOOOOOO!!! -->
    <match Class="PatchOperationSequence">
      <!-- <success>Always</success> -->
      <operations>
        <li Class="PatchOperationInsert">
          <xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs/li[text()="GAB_RawJeru"]</xpath>
          <success>Always</success>
          <value>
            <li>AR_RawArtichoke</li>
          </value>
        </li>
        <li Class="PatchOperationInsert">
          <xpath>Defs/RecipeDef/fixedIngredientFilter/thingDefs/li[text()="GAB_RawJeru"]</xpath>
          <success>Always</success>
          <value>
            <li>AR_RawArtichoke</li>
          </value>
        </li>
        <li Class="PatchOperationInsert">
          <xpath>Defs/RecipeDef/defaultIngredientFilter/thingDefs/li[text()="GAB_RawJeru"]</xpath>
          <success>Always</success>
          <value>
            <li>AR_RawArtichoke</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>