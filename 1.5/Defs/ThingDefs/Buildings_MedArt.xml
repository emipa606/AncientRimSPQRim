<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="SculptureBase">
    <defName>AR_ClassicalSculpture</defName>
    <label>classical sculpture</label>
    <description>A person-sized piece of material sculpted into an artistic form.</description>
	<thingClass>Building_Art</thingClass>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Buildings/Art/SculptureClassic</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>100</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>35000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
      <li>Woody</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <recipeMaker>
      <researchPrerequisites Inherit="False">
        <li>AR_Project_Mediterranean_Culture</li>
        <!-- <li MayRequire="vanillaexpanded.vfeart">VFE_Res_Statues</li> -->
      </researchPrerequisites>
    </recipeMaker>
  </ThingDef>
  <ThingDef Name="Mosaic" ParentName="SculptureBase" Abstract="True">
	<thingClass>Building_Art</thingClass>
    <description>Many pieces of stone, like tiny tiles put together, into an artwork.</description>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <minifiedDef>MinifiedThing</minifiedDef>
    <rotatable>true</rotatable>
    <clearBuildingArea>false</clearBuildingArea>
    <building>
      <isEdifice>false</isEdifice>
      <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
    </building>
    <recipeMaker>
      <researchPrerequisites Inherit="False">
        <li>AR_Project_Mediterranean_Culture</li>
        <!-- <li MayRequire="oskarpotocki.vfe.classical">VFEC_Mosaics</li> -->
      </researchPrerequisites>
    </recipeMaker>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
  </ThingDef>
  <ThingDef ParentName="Mosaic">
    <defName>AR_1x1Mosaic</defName>
    <label>Mosaic (1x1)</label>
    <graphicData>
      <texPath>Buildings/Art/Mosaic/1x1</texPath>
